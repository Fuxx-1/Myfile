<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace->绑定一个对用的Mapper接口-->
<mapper namespace="com.demo.dao.UserMapper">
    <!--select查询语句-->
    <select id="getUserList" resultType="com.demo.pojo.User">
        SELECT *
        FROM mybatis.user;
    </select>
    <select id="getUserById" parameterType="int" resultType="com.demo.pojo.User">
        SELECT *
        FROM mybatis.user
        where id = #{id};
    </select>
    <select id="addUser" parameterType="com.demo.pojo.User" resultType="integer">
        insert into mybatis.user (id, name, pwd)
        values (#{id}, #{name}, #{pwd});
    </select>
    <update id="updateUser" parameterType="com.demo.pojo.User" >
        update mybatis.user set name=#{name},pwd=#{pwd} where id=#{id};
    </update>
</mapper>